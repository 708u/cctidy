{
  "description": "Format Claude Code config files with cctidy",
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cctidy",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cctidy",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
