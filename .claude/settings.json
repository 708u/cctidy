{
  "hooks": {
    "PostToolUse": [
      {
        "hooks": [
          {
            "command": "python3 .claude/hooks/pre-commit-check/post-push-reset.py",
            "type": "command"
          }
        ],
        "matcher": "Bash"
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "python3 .claude/hooks/pre-commit-check/pre-commit-check.py",
            "type": "command"
          }
        ],
        "matcher": "Bash"
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read(~/.claude.json)",
      "Read(~/.claude/settings.json)",
      "Read(~/.claude/settings.local.json)"
    ]
  }
}
